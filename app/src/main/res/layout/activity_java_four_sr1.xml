<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JavaFourSR1"
    android:background="@color/white">

    <TextView
        android:id="@+id/sr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:text="@string/sr_text"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/it_was_easy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/sr_title"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/it_was_okay"
        android:layout_marginTop="24dp"
        android:src="@drawable/sr1a"
        android:onClick="javaFourPointTwoA"/>

    <ImageView
        android:id="@+id/it_was_okay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/sr_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/sr1b"
        android:onClick="javaFourPointTwoB"/>

    <ImageView
        android:id="@+id/it_was_difficult"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/sr_title"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/it_was_okay"
        android:layout_marginTop="24dp"
        android:src="@drawable/sr1c"
        android:onClick="javaFourPointTwoC"/>

</RelativeLayout>