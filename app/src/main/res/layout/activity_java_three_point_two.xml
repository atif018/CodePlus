<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".JavaThreePointTwo"
            android:background="@color/white">

            <TextView
                android:id="@+id/what_is_elseif_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/what_is_elseif_text"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/elseif_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/what_is_elseif_body"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/what_is_elseif_title"/>

            <ImageView
                android:id="@+id/elseif_example"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_below="@id/elseif_body"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/elseif_example" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/what_is_elseif_body1"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/elseif_example"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/go_to_next"
                android:layout_margin="32dp"
                android:onClick="javaProgramQuiz14"/>

        </RelativeLayout>
    </ScrollView>