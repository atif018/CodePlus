<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".JavaThreePointOne"
            android:background="@color/white">

            <TextView
                android:id="@+id/what_is_decisions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/what_is_decisions_text"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/decisions_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/what_is_decisions_body"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/what_is_decisions_title"/>

            <ImageView
                android:id="@+id/if_example"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/decisions_body"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/if_example" />

            <TextView
                android:id="@+id/decisions_second_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/what_is_decisions_body1"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/if_example"/>

            <ImageView
                android:id="@+id/if_proper_example"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/decisions_second_body"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/if_proper_example" />

            <TextView
                android:id="@+id/decisions_second_body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/what_is_decisions_body2"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/if_proper_example"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/go_to_quiz"
                android:layout_margin="32dp"
                android:onClick="javaProgramQuiz13"/>

        </RelativeLayout>
    </ScrollView>