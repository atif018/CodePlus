<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JavaOnePointTwoPointOne"
        android:background="@color/white">

        <TextView
            android:id="@+id/java_main_methods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="24dp"
            android:text="@string/java_main_methods"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/first_java_prog_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/java_main_methods_title"
            android:src="@drawable/introjavaprogblue"/>

        <TextView
            android:id="@+id/last_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/java_main_methods_body"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@id/first_java_prog_blue"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_view"
            android:layout_centerHorizontal="true"
            android:text="@string/go_to_next"
            android:layout_margin="32dp"
            android:onClick="javaOnePointTwoPointThree"/>

    </RelativeLayout>
</ScrollView>