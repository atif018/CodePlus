<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartJava4"
        android:background="@color/white">

        <ImageView
            android:id="@+id/what_is_java"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/j1c"
            android:onClick="startJavaSection"/>

        <ImageView
            android:id="@+id/what_are_data_types"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_below="@id/what_is_java"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/j2c"
            android:onClick="startDataSection"/>

        <ImageView
            android:id="@+id/what_are_decisions"
            android:src="@drawable/j3c"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/what_are_data_types"
            android:onClick="startDecisionsSection"/>

        <ImageView
            android:id="@+id/what_are_loops"
            android:src="@drawable/j4b"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/what_are_decisions"
            android:onClick="startLoopsSection"/>

        <ImageView
            android:id="@+id/what_are_methods"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@id/what_are_loops"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/j5a" />

        <ImageView
            android:id="@+id/what_are_arrays"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/what_are_methods"
            android:layout_centerHorizontal="true"
            android:src="@drawable/j6a" />

        <ImageView
            android:id="@+id/what_are_classes"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@id/what_are_arrays"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/j7a" />

    </RelativeLayout>
</ScrollView>